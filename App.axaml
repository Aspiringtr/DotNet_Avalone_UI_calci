<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="calculator.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
                
    <Application.Styles>
        <FluentTheme />
	</Application.Styles>
	<Application.Resources>
		<ControlTheme x:Key="cyan" TargetType="Button">
			<Setter Property="Background" Value="#4DC4D6"/>
			<Setter Property="CornerRadius" Value="5" />
			<Style Selector="^:pointerover">
				<Setter Property="Background" Value="#77DDED"/>
			</Style>
			<Style Selector="^:pressed">
				<Setter Property="Background" Value="#4DC4D6"/>
			</Style>
		</ControlTheme>
		<ControlTheme x:Key="Dblue" TargetType="Button">
			<Setter Property="Background" Value="#1D222F"/>
			<Setter Property="CornerRadius" Value="5" />
			<Style Selector="^:pointerover">
				<Setter Property="Background" Value="#29324A"/>
			</Style>
			<Style Selector="^:pressed">
				<Setter Property="Background" Value="#1D222F"/>
			</Style>
		</ControlTheme>
	</Application.Resources>
</Application>