<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="400"
        Width="250" Height="400"
        WindowStartupLocation="CenterScreen"
		x:Class="calculator.MainWindow"
        Title="calculator"
		Background="#1A1A28"
		Padding="5"
		ExtendClientAreaToDecorationsHint="True">
	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="VerticalAlignment" Value="Stretch"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
		</Style>
		<Style Selector="Button.B" >
			<Setter Property="Theme" Value="{StaticResource cyan}"/>
		</Style>
		<Style Selector="Button.D">
			<Setter Property="Theme" Value="{StaticResource Dblue}"/>
		</Style>
		<Style Selector="Label">
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>
	</Window.Styles>
	<Grid RowDefinitions="*,*,*,2*,2*" ColumnDefinitions="*,*,*,*">
		<!--
		<Canvas Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="4" >
			<Canvas.Styles>
				<Style Selector="Image">
					<Setter Property="Width" Value="20"/>
				</Style>
			</Canvas.Styles>
			<Image Source="{SvgImage /Asserts/images/close.svg}"/>
		</Canvas> -->
		<Grid Grid.Row="2" Margin="5" ColumnSpacing="10" Grid.ColumnSpan="4" ColumnDefinitions="*,*,*,*">
			<Button Classes="B" Grid.Column="0">
				<Label>CE</Label>
			</Button>
			<Button Classes="B" Grid.Column="1">
				<Label>/</Label>
			</Button>
			<Button Classes="B" Grid.Column="2">
				<Label>x</Label>
			</Button>
			<Button Classes="B" Grid.Column="3">
				<Label>-</Label>
			</Button>
		</Grid>
		<Grid Grid.Row="3" Margin="5" ColumnSpacing="10" RowSpacing="10" Grid.ColumnSpan="4" ColumnDefinitions="*,*,*,*" RowDefinitions="*,*">
			<Button Classes="D" Grid.Column="0" Grid.Row="0">
				<Label>7</Label>
			</Button>
			<Button Classes="D" Grid.Column="1" Grid.Row="0">
				<Label>8</Label>
			</Button>
			<Button Classes="D" Grid.Column="2" Grid.Row="0">
				<Label>9</Label>
			</Button>
			<Button Classes="B" Grid.Column="3" Grid.Row="0" Grid.RowSpan="2">
				<Label>+</Label>
			</Button>
			<Button Classes="D" Grid.Column="0" Grid.Row="1">
				<Label>4</Label>
			</Button>
			<Button Classes="D" Grid.Column="1" Grid.Row="1">
				<Label>5</Label>
			</Button>
			<Button Classes="D" Grid.Column="2" Grid.Row="1">
				<Label>6</Label>
			</Button>
		</Grid>
		<Grid Grid.Row="4" Margin="5" ColumnSpacing="10" RowSpacing="10" Grid.ColumnSpan="4" ColumnDefinitions="*,*,*,*" RowDefinitions="*,*">
			<Button Classes="D" Grid.Column="0" Grid.Row="0">
				<Label>1</Label>
			</Button>
			<Button Classes="D" Grid.Column="1" Grid.Row="0">
				<Label>2</Label>
			</Button>
			<Button Classes="D" Grid.Column="2" Grid.Row="0">
				<Label>3</Label>
			</Button>
			<Button Classes="B" Grid.Column="3" Grid.Row="0" Grid.RowSpan="2">
				<Label>EN</Label>
			</Button>
			<Button Classes="B" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
				<Label>0</Label>
			</Button>
			<Button Classes="D" Grid.Column="2" Grid.Row="1">
				<Label>.</Label>
			</Button>
		</Grid>
	</Grid>
</Window>
