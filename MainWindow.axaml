        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="400"
        Width="250" Height="400"
        WindowStartupLocation="CenterScreen"
		x:Class="calculator.MainWindow"
        Title="calculator"
		Background="#1A1A28"
		ExtendClientAreaToDecorationsHint="True">
	<Window.Styles>
		<Style Selector="Button.B">
			<Setter Property="Background" Value="#4DC4D6"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
		</Style>
		<Style Selector="Button.D">
			<Setter Property="Background" Value="#1D222F"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
		</Style>
		<Style Selector="Label">
			<Setter Property="VerticalAlignment" Value="Center"/>
